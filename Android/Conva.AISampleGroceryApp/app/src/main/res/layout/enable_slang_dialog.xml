    <!--        android:layout_marginLeft="2dp"-->
    <!--        android:layout_marginTop="4dp"-->
    <!--        android:layout_marginRight="2dp"-->
    <!--        android:layout_marginBottom="4dp"-->
    <!--        android:background="#9c9c9c" />-->

</LinearLayout>